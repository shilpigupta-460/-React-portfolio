{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    }, 
    "root": true,
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion":2015,
        "sourceType": "module"
    },
    // "parserOptions": {
    //     "ecmaVersion": 12,
    //     "sourceType": "module",
    //     "ecmaFeatures": {
       
    //       "jsx": true
    //     }
    //   },
     "setting":{
        "version":"latest",
        "import/resolver": {
            "node": {
              "extensions": [".js",".jsx",".ts",".tsx"]
            }
     },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types": "off"
        //  "react/react-in-jsx-scope":"off"
       
    }
}
}